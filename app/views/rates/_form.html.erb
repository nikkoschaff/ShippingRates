<%= form_for :rate, url: rates_path do |f| %>



    <div class="field">
        <%= f.text_field :weight, :placeholder => "Weight (ounces)" %>
    </div>

    <div class="field">
        <%= f.text_field :country, :placeholder => "Country" %>
    </div>

    <div class="field">
        <%= f.select :state, options_for_select(us_states) %>
    </div>

    <div class="field">
        <%= f.text_field :city, :placeholder => "City" %>
    </div>

    <div class="field">
        <%= f.text_field :zip, :placeholder => "Zip" %>
    </div>

    <div class="action">
        <%= f.submit "Find rates" %>
    </div>
<% end %>