<H1>Package Info</H1>

<p>
  <strong>Weight:</strong>
  <%= @rate.weight %>
</p>

<p>
  <strong>Country:</strong>
  <%= @rate.country %>
</p>
 
<p>
  <strong>State:</strong>
  <%= @rate.state %>
</p>

<p>
  <strong>City:</strong>
  <%= @rate.city %>
</p>

<p>
  <strong>Zip Code:</strong>
  <%= @rate.zip %>
</p>

<h1>Shipping Rates</h1>

<p>
  <strong>UPS:</strong><br />
  <% upsRates = @upsResponse.rates.sort_by(&:price).collect %>
  <% upsRates.each do |rate| %>
  	<%= rate.service_name %>: $<%= rate.price / 100.0 %>
  	<br />

  <% end %>
</p>


